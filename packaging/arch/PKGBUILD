# Maintainer: F1R3FLY.io <noreply@f1r3fly.io>
pkgname=mettatron
pkgver=0.1.0
pkgrel=1
pkgdesc="MeTTa language evaluator with lazy evaluation and pattern matching"
arch=('x86_64' 'aarch64')
url="https://github.com/F1R3FLY-io/MeTTa-Compiler"
license=('Apache')
depends=('gcc-libs')
makedepends=('rust' 'cargo' 'git' 'protobuf')
source=("git+https://github.com/F1R3FLY-io/MeTTa-Compiler.git#tag=v${pkgver}"
        "git+https://github.com/F1R3FLY-io/f1r3node.git#branch=dylon/mettatron"
        "git+https://github.com/trueagi-io/MORK.git#branch=main"
        "git+https://github.com/Adam-Vandervorst/PathMap.git#branch=master")
sha256sums=('SKIP' 'SKIP' 'SKIP' 'SKIP')

prepare() {
    cd "$srcdir"
    # Link dependencies to expected locations
    ln -sf "$srcdir/f1r3node" "$srcdir/MeTTa-Compiler/../f1r3node"
    ln -sf "$srcdir/MORK" "$srcdir/MeTTa-Compiler/../MORK"
    ln -sf "$srcdir/PathMap" "$srcdir/MeTTa-Compiler/../PathMap"
}

build() {
    cd "$srcdir/MeTTa-Compiler"
    export RUSTUP_TOOLCHAIN=nightly
    export CARGO_TARGET_DIR=target
    cargo build --release --locked
}

check() {
    cd "$srcdir/MeTTa-Compiler"
    export RUSTUP_TOOLCHAIN=nightly
    cargo test --release --locked
}

package() {
    cd "$srcdir/MeTTa-Compiler"
    install -Dm755 "target/release/mettatron" "$pkgdir/usr/bin/mettatron"
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
    install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"

    # Install examples
    mkdir -p "$pkgdir/usr/share/doc/$pkgname/examples"
    cp -r examples/* "$pkgdir/usr/share/doc/$pkgname/examples/"
}
